<Window x:Class="AdoWPF.SaldoRekeningRaadplegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdoWPF"
        mc:Ignorable="d"
        Title="SaldoRekeningRaadplegen" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Rekening Nr.:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="textBoxRekeningNr" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" MinWidth="100"/>
        <Button x:Name="buttonSaldo" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Saldo" MinWidth="100" Click="buttonSaldo_Click"/>
        <Label x:Name="labelStatus" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center"/>
    </Grid>
</Window>
